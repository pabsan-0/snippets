{
  "configurations": {
    "my-c-program": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "type":    "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/main.o",
        "cwd": "${workspaceRoot}",
        "externalConsole": true,
        "stopAtEntry": false,
        "MIMode": "gdb",
        "logging": {
          "engineLogging": false
        }
      }
    }
  }
}
